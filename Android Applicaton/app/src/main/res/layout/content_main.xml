<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:text="Smoothie Cart Manager" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make A Purchase"
        android:id="@+id/button_main_01"
        android:layout_above="@+id/button_main_02"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Customer"
        android:id="@+id/button_main_02"
        android:layout_above="@+id/button_main_03"
        android:layout_alignLeft="@+id/button_main_01"
        android:layout_alignStart="@+id/button_main_01"
        android:layout_alignRight="@+id/button_main_01"
        android:layout_alignEnd="@+id/button_main_01" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Customer"
        android:id="@+id/button_main_03"
        android:layout_above="@+id/button_main_04"
        android:layout_alignLeft="@+id/button_main_02"
        android:layout_alignStart="@+id/button_main_02"
        android:layout_alignRight="@+id/button_main_02"
        android:layout_alignEnd="@+id/button_main_02" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Transactions"
        android:id="@+id/button_main_04"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button_main_03"
        android:layout_alignStart="@+id/button_main_03"
        android:layout_alignRight="@+id/button_main_03"
        android:layout_alignEnd="@+id/button_main_03" />
</RelativeLayout>
